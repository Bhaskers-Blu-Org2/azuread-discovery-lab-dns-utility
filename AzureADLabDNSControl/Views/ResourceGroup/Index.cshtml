@{
    ViewBag.Title = "Resource Groups";
}
<div class="panel panel-primary" style="margin-top:10px;position:relative;">
    <div class="panel-heading">
        <button id="btnAddGroup" type="button" class="btn btn-xs btn-default control pull-right"><span class="glyphicon glyphicon-plus"></span> New...</button>
        @ViewBag.Title
    </div>
    <div class="panel-body">
        <div class="col-sm-3">
            <div class="scrollWrap">
                <ul id="groupList" class="nav nav-pills nav-stacked"></ul>
            </div>
        </div>
        <div id="groupDetailsInfo" class="col-sm-9 details">
            Select a group from the left to view details.
        </div>

        <div id="groupDetails" class="col-sm-9 details">
            <div class="row">
                <div class="well well-sm">
                    <button id="btnDeleteGroup" class="btn btn-xs btn-danger control"><span class="glyphicon glyphicon-remove-sign"></span> Delete...</button>
                    <button id="btnRefreshDomains" class="btn btn-xs btn-default control"><span class="glyphicon glyphicon-refresh"></span> Refresh Domains</button>
                    <button id="btnClose" class="btn btn-xs btn-primary control"><span class="glyphicon glyphicon-ok"></span> Close</button>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label for="viewOwnerAlias">Owner</label>
                    <div id="viewOwnerAlias"></div>
                </div>
                <div class="col-sm-4">
                    <label for="viewCreateDate">Create Date</label>
                    <div id="viewCreateDate"></div>
                </div>
                <div class="col-sm-4">
                    <label for="viewShared">Shared?</label>
                    <div id="viewShared"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label for="viewAzureSubscriptionId">Subscription</label>
                    <div id="viewAzureSubscriptionId"></div>
                </div>
                <div class="col-sm-6">
                    <label for="viewDnsZoneRG">DNS Zone Resource Group Name</label>
                    <div id="viewDnsZoneRG"></div>
                </div>
            </div>
            <div class="row">
                <div>
                    <label for="viewDomainList">Domain List</label>
                    <select class="form-control" multiple size="8" id="viewDomainList"></select>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_rgModal")

@section scripts {
    <script type="text/javascript" src="~/Scripts/app/rg.js"></script>
}

@section styles {
    <style type="text/css">
        .well.well-sm {
            margin-bottom:0;
        }
        label {
            display:block;
            margin-top:14px;
            margin-bottom:0;
        }
        .scrollWrap {
            overflow: auto;
            height: 400px;
            border: 1px solid #cacaca;
            border-radius: 4px;
        }
        #groupList li {
            border-radius:0;
        }
        #groupList li a {
            background-color: #fafafa;
        }
        #groupList li.active a {
            background-color: #337ab7;
        }
        #groupList li a.unlinked {
            background-color: #fff2f2;
        }
        #groupDetails {
            display: none;
        }
        .glyphicon.glyphicon-thumbs-down {
            color:red;
        }
        .glyphicon.glyphicon-check {
            color:green;
        }
        .panel-heading {
            cursor:pointer;
        }
        .input-sm {
            height:inherit;
            margin-top:-10px;
        }
        #NewRG .btn {
            width: 120px;
        }
        .btn-xs {
            width:120px;
        }
        #viewDomainList {
            max-width: initial;
            width: 250px;
        }
        #verifyStatus {
            padding:6px;
            margin:6px;
            text-align:center;
            min-height:34px;
            border-radius:6px;
        }
        .pending {
            color: black;
            background-color:transparent;
        }
        .success {
            color: green;
            background-color: #e1ffe5;
        }
        .failure {
            color: red;
            background-color: #ffe9e9;
        }
        #RGForm div.scrollWrap {
            height: 160px;
        }
    </style>
}
