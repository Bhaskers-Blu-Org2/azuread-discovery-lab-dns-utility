@model AzureADLabDNSControl.Models.TeamAuthentication

@{
    ViewBag.Title = "Team Login";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-primary" style="margin-top:10px;position:relative;">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>@ViewBag.ErrorHeader</strong>
                        <div>@ViewBag.Error</div>
                    </div>
                }
                <section>
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.LabCode, new { @class = "col-md-5 control-label" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(m => m.LabCode, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TeamAuth, new { @class = "col-md-5 control-label" })
                            <div class="col-md-7">
                                @Html.PasswordFor(m => m.TeamAuth, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-8">
                                <input type="submit" value="Retrieve Team Assignment" class="btn btn-primary pull-right" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
    $(function() {
        $("#LabCode").focus().select();
    });    
    </script>
}

@section styles {
    <style type="text/css">
        div.row {
            margin-top: 20px;
        }
    </style>
}
